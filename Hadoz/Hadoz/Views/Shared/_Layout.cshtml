<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
   
    @HTMLHelper.StandardCSS()
    @HTMLHelper.TemplateCSS()
    @HTMLHelper.StandardJS()
    @HTMLHelper.TemplateJS()
</head>
<body>
    <!-- Container-fluid -->
    <div class="container-fluid">

        <!-- Container -->
        <div class="template-container">
            <!-- Content -->
            <div class="content">
                <ul class="navigation">
                    <li class="normal-page"><a class="nav-aboutme" href="about.html"><span>ABOUT ME</span></a></li>
                    <li class="current-page"><a class="nav-home" href="index.html"><span>HOME</span></a></li>
                    <li class="normal-page"><a class="nav-blog" href="blog.html"><span>BLOG</span></a></li>
                    <li class="normal-page"><a class="nav-portfolio" href="portfolio.html"><span>PORTFOLIO</span></a></li>
                </ul>

                <div class="maintitle">
                    <h1>Hadi Wirontono</h1>
                    <div class="mainsubtitle">{software engineer}</div>
                </div>

                <div class="separator"></div>
                
                @RenderBody()
                
                <div class="separator"></div>

                <div class="social">
                    <ul>
                        <li class="twitter">
                            <a href="#"><div class="icon-twitter"></div></a>
                        </li>
                        <li class="facebook">
                            <a href="#"><div class="icon-facebook"></div></a>
                        </li>
                        <li class="google">
                            <a href="#"><div class="icon-google"></div></a>
                        </li>
                        <li class="instagram">
                            <a href="#"><div class="icon-instagram"></div></a>
                        </li>
                        <li class="youtube">
                            <a href="#"><div class="icon-youtube"></div></a>
                        </li>
                        <li class="rss">
                            <a href="#"><div class="icon-rss"></div></a>
                        </li>
                        <li class="linkedin">
                            <a href="#"><div class="icon-linkedin"></div></a>
                        </li>
                        <li class="skype">
                            <a href="#"><div class="icon-skype"></div></a>
                        </li>
                    </ul>
                </div>
            </div><!-- /Content -->
        </div><!-- /Template-Container -->

        <div class="footer-cap"></div><!-- Invisible div. Needed to save static screen during animation -->
        <div class="footer">
            <p>All Rights Reserved<br>
            Hadi Wirontono © 2013</p>
            <p>Copyrights</p>
        </div>

    </div><!-- /Container-fluid -->

</body>
</html>
